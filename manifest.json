{
  "manifest_version": 3,
  "name": "Block Shorts & Slop",
  "version": "1.1.0",
  "description": "Hide YouTube Shorts, games, and Twitter video posts",
  "permissions": [],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://m.youtube.com/*",
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*",
        "https://m.youtube.com/*",
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}